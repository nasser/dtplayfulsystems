//--------------------------------------------------------------
void testApp::keyPressed(int key){
    
    switch (key) {
        case 'a':
            theColor.b=255;
            break;
        case 'b':
            theColor.g=255;
            break;
            
        default:
            //if nothing matches
            break;
    }
    
    
    
    //theColor.g=255;
    
}

